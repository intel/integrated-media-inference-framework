cmake_minimum_required(VERSION 2.8.2)

include(ExternalProject)

ExternalProject_Add(${EXT_PRJ_NAME}

  # Clonse the NNG repo
  GIT_REPOSITORY "${EXT_PRJ_REPO}"
  GIT_TAG "${EXT_PRJ_TAG}"
  GIT_PROGRESS 1
  
  # No special commands
  UPDATE_COMMAND ""
  PATCH_COMMAND ""
  TEST_COMMAND ""
  INSTALL_COMMAND ""

  # Build in the source (cloned) directory
  BUILD_IN_SOURCE 1

  CONFIGURE_COMMAND ./autogen.sh --enable-x11 --prefix=${EXT_PRJ_INSTALL_DIR}
  BUILD_COMMAND make -j16
  COMMAND make install
)
